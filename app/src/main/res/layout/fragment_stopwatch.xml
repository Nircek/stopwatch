<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Stopwatch">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/clock" android:textSize="36sp"
                android:textStyle="bold" android:textAlignment="center" android:layout_weight="3"
                android:text="00:00:00"/>
        <Button
                android:text="@string/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/left" android:layout_weight="1"/>
        <Button
                android:text="@string/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/right" android:layout_weight="1"/>
    </LinearLayout>
</FrameLayout>
